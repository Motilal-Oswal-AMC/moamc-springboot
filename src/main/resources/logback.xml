<configuration>
    <appender name = "myConsoleAppender" class = "ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{dd-MM-yyyy HH:mm:ss} [%X{requestId}] %-5level %logger{36} ----- %msg %n
            </pattern>
        </encoder>
    </appender>

    <appender name = "myFileAppender" class = "ch.qos.logback.core.rolling.RollingFileAppender">
        <file>
            ./application_motilalOswal_logs/motilalOswal.log
        </file>
        <rollingPolicy class ="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>application_motilalOswal_logs/motilalOswal-%d{dd-MM-yyyy}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>10</maxHistory>
            <totalSizeCap>1024MB</totalSizeCap>
            <contextName>MotilalOswal</contextName>
        </rollingPolicy>
        <encoder>
            <pattern>%d{dd-MM-yyyy HH:mm:ss} [%X{requestId}] %-5level %logger{36} ----- %msg %n
            </pattern>
        </encoder>
    </appender>

    <root level = "INFO">
        <appender-ref ref = "myConsoleAppender"/>
        <appender-ref ref = "myFileAppender"/>
    </root>
</configuration>